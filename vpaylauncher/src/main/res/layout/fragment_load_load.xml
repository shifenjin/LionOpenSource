<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:fbutton="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">


	<RelativeLayout
		android:id="@+id/load_title_panel"
		android:layout_width="@dimen/load_load_title_panel_width"
		android:layout_height="@dimen/load_load_title_panel_height"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/load_load_title_panel_layout_marginTop">

		<ImageView
			android:id="@+id/img_load_top"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/load_loading_icon"
		/>
		<TextView
			android:id="@+id/load_title_str"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/img_load_top"
			android:layout_marginTop="15dp"
			android:layout_centerHorizontal="true"
			android:textColor="@color/setting_bg_white"
		/>
	</RelativeLayout>


	<RelativeLayout
		android:id="@+id/userNameLayout"
		android:layout_width="match_parent"
		android:layout_height="@dimen/load_userNameLayout_height"
		android:layout_marginTop="@dimen/load_usernameLayout_marginTop"
		android:layout_centerHorizontal="true"
		android:background="@drawable/corner_input"
	>

		<RelativeLayout
			android:id="@+id/imgUserName_layout"
			android:layout_width="@dimen/load_imgUserName_layout_width"
			android:layout_height="match_parent">
			<ImageView
				android:id="@+id/userName_img"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:src="@drawable/load_username_new"/>
		</RelativeLayout>
		<View android:layout_width="1dp"
			  android:layout_height="match_parent"
			  android:background="@color/color_blue_listview_bg"
			  android:layout_toRightOf="@id/imgUserName_layout"
		></View>
		<TextView
			android:id="@+id/username_text"
			android:text="@string/load_edit"
			android:gravity="center_vertical"
			android:textSize="13sp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@null"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/imgUserName_layout"
			android:layout_marginLeft="@dimen/load_username_text_marginLeft"
			android:textColor="@color/setting_bg_white"/>

		<ImageView
			android:id="@+id/username_pull_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/load_pull"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp"/>
		<RelativeLayout
			android:id="@+id/layout_refresh"
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:layout_toLeftOf="@id/username_pull_img"
			android:layout_marginRight="5dp"
			android:visibility="gone"
		>
			<ImageView
				android:id="@+id/img_button_refresh"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/load_refresh_list_img"
				android:layout_centerInParent="true"
				android:background="@color/transparent"
			/>
		</RelativeLayout>

	</RelativeLayout>


	<RelativeLayout
		android:id="@+id/password"
		android:layout_width="match_parent"
		android:layout_height="@dimen/load_pwd_layout_height"
		android:layout_below="@id/userNameLayout"
		android:layout_alignLeft="@id/userNameLayout"
		android:layout_alignRight="@id/userNameLayout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="12dp"
		android:background="@drawable/corner_input">
		<RelativeLayout
			android:id="@+id/img_pwd_layout"
			android:layout_width="@dimen/load_imgPwd_layout_width"
			android:layout_height="match_parent">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:src="@drawable/load_pwd_new"/>
		</RelativeLayout>
		<View android:layout_width="1dp"
			  android:layout_height="match_parent"
			  android:background="@color/color_blue_listview_bg"
			  android:layout_toRightOf="@id/img_pwd_layout"
		></View>

		<EditText
			android:id="@+id/password_edit"
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/img_pwd_layout"
			android:layout_marginLeft="@dimen/load_username_text_marginLeft"
			android:inputType="phone"
			android:background="@null"
			android:textColor="@android:color/white"
			android:textColorHint="#9ad9ff"
		/>
		<!-- android:maxLength="12" -->
	</RelativeLayout>

	<com.yunnex.ui.textview.FButton
		android:id="@+id/btn_load"
		android:layout_width="270dp"
		android:layout_height="48dp"
		android:layout_alignLeft="@id/password"
		android:layout_alignRight="@id/password"
		android:layout_below="@id/password"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="12dp"
		android:text="@string/load_btn"
		android:textSize="13sp"
		android:textColor="#0074eb"
		fbutton:buttonColor="#9ad9ff"
		fbutton:cornerRadius="4dp"
		fbutton:shadowColor="#c7eaff"
		fbutton:shadowEnabled="false"/>

	<LinearLayout
		android:id="@+id/operator_list_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/corners_listview_bg"
		android:layout_below="@id/userNameLayout"
		android:visibility="gone"
	>
		<ListView
			android:id="@+id/load_list"
			android:layout_width="match_parent"
			android:layout_height="242dp"
			android:layout_marginRight="13dp"
			android:layout_marginLeft="13dp"
			android:divider="#8ed3ff"
			android:dividerHeight="1px"
		>
		</ListView>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/operator_list_warp_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/corners_listview_bg"
		android:layout_below="@id/userNameLayout"
		android:visibility="gone"
	>
		<ListView
			android:id="@+id/load_list_warp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="13dp"
			android:layout_marginLeft="13dp"
			android:divider="#8ed3ff"
			android:dividerHeight="1px"
		>
		</ListView>
	</LinearLayout>

</RelativeLayout>