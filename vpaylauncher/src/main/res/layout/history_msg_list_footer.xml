<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center">

    <TextView
        android:id="@+id/history_list_tip_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/list_tip_1"
        android:textColor="@color/list_footer_text_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/history_list_tip_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_list_tip_1"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/list_tip_2"
        android:textColor="@color/list_footer_text_color"
        android:textSize="13sp" />
</RelativeLayout>